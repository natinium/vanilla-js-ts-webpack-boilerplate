# EditorConfig is awesome: https://editorconfig.org

root = true

# Apply settings to all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Override for JSON files
[*.json]
indent_size = 2

# Override for Markdown files
[*.md]
trim_trailing_whitespace = false

# Override for YAML files
[*.yaml]
indent_size = 2

# Override for TypeScript files
[*.ts]
indent_size = 2

# Override for JavaScript files
[*.js]
indent_size = 2

# Override for CSS and SCSS files
[*.{css,scss}]
indent_size = 2
